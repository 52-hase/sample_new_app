<!DOCTYPE html>
<html>
<head>
  <title>はじめるボタン</title>
  <style>
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    button {
      font-size: 24px;
      padding: 10px 20px;
    }
  </style>
</head>
<body>
  <button id="start-btn">はじめる</button>

  <script>
    const startButton = document.getElementById('start-btn');
    startButton.addEventListener('click', () => {
      // app/views/studies/new.html.erbへのパスを設定する
      const newStudyPath = '/studies/new';
      window.location.href = newStudyPath;
    });
  </script>
</body>
</html>